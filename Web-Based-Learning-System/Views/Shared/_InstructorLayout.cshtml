<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Instructor | LinguaLink</title>

    <style>
        body {
            margin: 0;
            font-family: 'Segoe UI', Tahoma, sans-serif;
            background-color: #f5f6fa;
            display: flex;
        }

        .sidebar {
            width: 250px;
            background-color: #1e3a8a;
            color: white;
            height: 100vh;
            padding: 20px;
            position: fixed;
        }

            .sidebar h2 {
                text-align: center;
                margin-bottom: 30px;
            }

            .sidebar a {
                display: block;
                color: white;
                text-decoration: none;
                padding: 12px;
                margin-bottom: 10px;
                border-radius: 6px;
                transition: background 0.2s, border 0.2s;
                font-weight: 500;
            }

                .sidebar a:hover {
                    background-color: #2563eb;
                }

                .sidebar a.active {
                    background-color: #3b82f6;
                    color: white;
                    font-weight: 700;
                    border-left: 5px solid white;
                    padding-left: 17px;
                }

        .badge {
            background-color: red;
            color: white;
            border-radius: 50%;
            padding: 4px 8px;
            font-size: 12px;
            margin-left: 8px;
        }
        .main-content {
            margin-left: 270px;
            padding: 30px;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="sidebar">
        <h2>Instructor Dashboard</h2>

        @{
            var currentPath = Context.Request.Path.Value ?? "";
            // Normalize path to ensure "/Instructor" and "/Instructor/Index" are treated the same
            string normalizedPath = currentPath.TrimEnd('/').ToLower();

            string GetActiveClass(string path)
            {
                // Remove trailing slash and lowercase
                var normalizedTarget = path.TrimEnd('/').ToLower();
                return normalizedPath == normalizedTarget ? "active" : "";
            }
        }

        <a href="/Instructor/Index" class="@GetActiveClass("/Instructor") @GetActiveClass("/Instructor/Index")">Dashboard</a>
        <a href="/Instructor/AddCourse" class="@GetActiveClass("/Instructor/AddCourse")">Add Course</a>
        <a href="/Instructor/AddLesson" class="@GetActiveClass("/Instructor/AddLesson")">Add Lesson</a>
        <a href="/Instructor/Profile" class="@GetActiveClass("/Instructor/Profile")">Profile</a>
        <a href="/Instructor/Notifications"
           class="@GetActiveClass("/Instructor/Notifications")">
            Notifications
            @if (ViewBag.PendingNotifications > 0)
            {
                <span class="badge">@ViewBag.PendingNotifications</span>
            }
        </a>


        <a href="/Account/Logout">Logout</a>
    </div>

    <div class="main-content">
        @RenderBody()
    </div>

</body>
</html>
