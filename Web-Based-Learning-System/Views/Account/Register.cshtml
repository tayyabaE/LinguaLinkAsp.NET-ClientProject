@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Register"; // Change title accordingly
}

<style>
    form {
        background-color: white;
        padding: 40px 30px;
        border-radius: 15px;
        max-width: 450px;
        margin: 40px auto;
        box-shadow: 0 12px 30px rgba(0,0,0,0.15); /* Stronger but softer shadow */
        border: 1px solid #e2e8f0; /* New: Soft border for definition */
        transition: all 0.3s ease;
    }

        form:hover {
            /* Lighter hover effect */
            transform: translateY(-5px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.2);
        }

        form h2 {
            font-size: 32px; /* Slightly larger title */
            margin-bottom: 30px; /* Increased space below title */
            color: #1e3a8a;
            text-align: center; /* Centering the form title */
        }

        /* Update the input and select styles for underline look and increased spacing */
        form input, form select {
            width: 100%;
            /* 1. Increased horizontal padding (right side) */
            padding: 16px 5px 10px 18px; /* Top Right Bottom Left (Increased Right padding from 18px to 5px, and added 10px bottom to lift text off the underline) */

            margin: 14px 0;
            border-radius: 0; /* No rounded corners for line style */
            /* 2. Underline Style */
            border: none; /* Remove all existing borders */
            border-bottom: 2px solid #cbd5e1; /* Add bottom border (the underline) */

            font-size: 16px;
            outline: none;
            transition: all 0.3s;
            background-color: transparent; /* Remove background color */
        }

            /* Update the focus/hover style for the blue outline effect */
            form input:focus, form select:focus {
                border-color: #3b82f6; /* Blue underline on focus */
                background-color: transparent;
                box-shadow: none; /* Remove the box-shadow glow */
            }

            /* New: Add a hover state for the underline color */
            form input:hover, form select:hover {
                border-bottom-color: #3b82f6; /* Blue underline on hover */
            }

        form button {
            width: 100%;
            padding: 12px; /* Increased padding */
            margin-top: 25px; /* More space above the button */
            border-radius: 10px; /* Matching border-radius */
            border: none;
            /* Dynamic Gradient for Button */
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            font-size: 16px; /* Larger text */
            font-weight: 700;
            cursor: pointer;
            transition: all 0.3s ease;
        }

            form button:hover {
                background: linear-gradient(135deg, #2563eb, #1e40af); /* Darker gradient on hover */
                box-shadow: 0 8px 20px rgba(37,99,235,0.4); /* Stronger hover shadow */
                transform: translateY(-2px); /* Slight lift */
            }

    /* Styling for the Error Message */
    p.error {
        font-size: 16px;
        margin-top: 15px;
        color: #ef4444;
        font-weight: 600;
        text-align: center;
        border: 1px solid #fecaca;
        background-color: #fef2f2;
        padding: 10px;
        border-radius: 8px;
        max-width: 450px;
        margin: 15px auto;
    }

    /* Optional: small placeholder styling */
    form input::placeholder {
        color: #94a3b8;
        font-style: italic;
    }
</style>

<div class="container">
    <h2>Let's Get started</h2>

    <form method="post">
        <input name="FullName" placeholder="Full Name" required />
        <input name="Email" type="email" placeholder="Email" required />
        <input name="password" type="password" placeholder="Password" required />

        <select name="Role">
            <option>Learner</option>
            <option>Instructor</option>
        </select>

        <button type="submit">Sign up</button>
    </form>
</div>
