@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Login";
}

<style>
    /* --- Form Container --- */
    .login-container {
        max-width: 450px;
        margin: 40px auto;
    }

    form {
        background-color: white;
        padding: 40px 30px;
        border-radius: 15px;
        box-shadow: 0 12px 30px rgba(0,0,0,0.15);
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

        form:hover {
            transform: translateY(-5px);
            box-shadow: 0 18px 40px rgba(0,0,0,0.2);
        }

        form h2 {
            font-size: 32px;
            margin-bottom: 30px;
            color: #1e3a8a;
            text-align: center;
            font-weight: 800;
        }

    /* --- Input Group Styling (Wrapper for Input + Icon) --- */
    .input-group {
        position: relative;
        margin-bottom: 25px;
    }

        /* Icon Styling */
        .input-group i {
            position: absolute;
            left: 0;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 1.1rem;
            transition: color 0.3s;
            pointer-events: none;
        }

    /* Input/Select Field Styles - FIX APPLIED HERE */
    form input, form select {
        /* *** FIX: Ensure padding is included in the element's total width/height *** */
        box-sizing: border-box;
        width: 100%;
        padding: 16px 5px 10px 35px; /* Space for icon (35px left padding) */

        margin: 0;
        border-radius: 0;
        border: none;
        border-bottom: 2px solid #cbd5e1;
        font-size: 16px;
        outline: none;
        transition: all 0.3s;
        background-color: transparent;
        color: #333;
    }

        /* Input focus/hover effect */
        form input:focus {
            border-color: #3b82f6;
            background-color: transparent;
        }

        form input:hover {
            border-bottom-color: #3b82f6;
        }

    /* Icon color change on input focus */
    .input-group input:focus ~ i {
        color: #3b82f6;
    }

    /* Input placeholder styling */
    form input::placeholder {
        color: #94a3b8;
        font-style: italic;
    }

    /* --- Button Styles --- */
    form button {
        width: 100%;
        padding: 14px;
        margin-top: 35px;
        border-radius: 30px;
        border: none;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        font-size: 1.1rem;
        font-weight: 700;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(59, 130, 246, 0.4);
    }

        form button:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
            box-shadow: 0 8px 25px rgba(37,99,235,0.6);
            transform: translateY(-3px);
        }

    /* --- Footer/Link Section --- */
    .form-footer {
        text-align: center;
        margin-top: 20px;
        font-size: 0.95rem;
        color: #64748b;
    }

        .form-footer a {
            color: #3b82f6;
            text-decoration: none;
            font-weight: 600;
            transition: color 0.3s;
        }

            .form-footer a:hover {
                color: #1e3a8a;
                text-decoration: underline;
            }

    /* --- Error Message Styling - FIX APPLIED HERE --- */
    p.error {
        /* Removed max-width here as it's outside the form */
        font-size: 16px;
        margin-top: 15px;
        color: #ef4444;
        font-weight: 600;
        text-align: center;
        border: 1px solid #fecaca;
        background-color: #fef2f2;
        padding: 10px;
        border-radius: 8px;
        /* Adjusted margin to use container width for centering */
        margin: 15px auto;
    }
</style>

<div class="container login-container">
    <form method="post">
        <h2><i class="fas fa-sign-in-alt"></i> Welcome Back</h2>

        <div class="input-group">
            <input name="email" type="email" placeholder="Email Address" required />
            <i class="fas fa-envelope"></i>
        </div>

        <div class="input-group">
            <input name="password" type="password" placeholder="Password" required />
            <i class="fas fa-lock"></i>
        </div>

        <button type="submit">Log In</button>
    </form>

    <div class="form-footer">
        Don't have an account? <a href="@Url.Action("Register", "Account")">Sign up here</a>
    </div>

    @if (!string.IsNullOrEmpty(ViewBag.Error))
    {
        <p class="error">@ViewBag.Error</p>
    }
</div>