    <h3>📘 Lessons</h3>

    @if (!Model.Lessons.Any())
    {
        <p class="text-secondary">No lessons have been published for this course yet.</p>
    }
    else
    {
        foreach (var lesson in Model.Lessons)
        {
            <div class="lesson-card">
                <h4>@lesson.OrderNo. @lesson.Title</h4>

                <a class="btn btn-success"
                   href="@Url.Action("LessonDetails", "Learner", new { lessonId = lesson.Id })">
                    View Lesson
                </a>
            </div>
        }
    }

    <hr />

    <hr />

    <h3>📝 Quizzes</h3>

    @if (!Model.Quizzes.Any())
    {
        <p class="text-secondary">No quizzes are available for this course.</p>
    }
    else
    {
        foreach (var quiz in Model.Quizzes)
        {
            <div class="lesson-card">
                <h4>Quiz: @quiz.Question</h4>

                <a class="btn btn-primary"
                   href="@Url.Action("AttemptQuiz", "Learner", new { quizId = quiz.Id })">
                    Attempt Quiz
