@model CourseDetailsViewModel

@{
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
    ViewData["Title"] = "Course Detail";
}

<style>
    .course-detail-wrapper {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .course-header-card {
        background-color: white;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        margin-bottom: 40px;
    }

    h2 {
        color: #1e3a8a;
        font-size: 2.5rem;
        margin-top: 0;
        margin-bottom: 10px;
    }

    .course-header-card p {
        color: #475569;
        font-size: 1.1rem;
        line-height: 1.6;
        margin-bottom: 15px;
    }

    .course-header-card strong {
        color: #1e293b;
    }

    .level-badge {
        display: inline-block;
        padding: 5px 15px;
        border-radius: 20px;
        font-weight: 700;
        font-size: 0.9rem;
        margin-top: 10px;
    }

    /* Level specific colors (adjust as needed based on your Level data) */
    .level-Beginner {
        background-color: #dcfce7; /* Light green */
        color: #15803d; /* Dark green */
    }

    .level-Intermediate {
        background-color: #fefce8; /* Light yellow */
        color: #b45309; /* Dark orange */
    }

    .level-Advanced {
        background-color: #fee2e2; /* Light red */
        color: #b91c1c; /* Dark red */
    }

    hr {
        border: 0;
        height: 1px;
        background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(100, 116, 139, 0.4), rgba(0, 0, 0, 0));
        margin: 40px 0;
    }

    /* Section Headings */
    h3 {
        color: #1e293b;
        font-size: 1.8rem;
        margin-bottom: 25px;
    }

    /* Lesson List Styling */
    .lesson-card {
        background-color: #f8fafc; /* Very light background for contrast */
        padding: 20px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
        display: flex;
        justify-content: space-between;
        align-items: center;
        transition: background-color 0.2s;
    }

        .lesson-card:hover {
            background-color: #f1f5f9; /* Subtle hover effect */
        }

        .lesson-card h4 {
            color: #334155;
            font-size: 1.15rem;
            margin: 0;
        }

    /* Buttons */
    .btn {
        padding: 8px 18px;
        text-decoration: none;
        font-weight: 600;
        border-radius: 6px;
        transition: all 0.2s;
        display: inline-block;
        font-size: 0.95rem;
    }

    /* View Lesson Button (Success/Green) */
    .btn-success {
        background-color: #22c55e;
        color: white;
        border: 1px solid #16a34a;
    }

        .btn-success:hover {
            background-color: #16a34a;
            box-shadow: 0 2px 5px rgba(34, 197, 94, 0.3);
        }

    .btn-primary {
        background-color: #3b82f6;
        color: white;
        border: 1px solid #2563eb;
    }

        .btn-primary:hover {
            background-color: #2563eb;
            box-shadow: 0 2px 5px rgba(59, 130, 246, 0.3);
        }

</style>

<div class="course-detail-wrapper">

    <div class="course-header-card">
        <h2>@Model.Course.Name</h2>
        <p>@Model.Course.Description</p>
        <p>
            <strong>Level:</strong>
            <span class="level-badge level-@Model.Course.Level">
                @Model.Course.Level
            </span>
        </p>
    </div>

    <hr />

    <hr />

    <h3>📚 Vocabulary</h3>
    @if (!Model.Vocabularies.Any())
    {
        <p class="text-secondary">No vocabulary added for this course.</p>
    }
    else
    {
        foreach (var vocab in Model.Vocabularies)
        {
            <div class="lesson-card">
                <h4>@vocab.Word</h4>
                <p>@vocab.Meaning</p>
            </div>
        }
    }

    <hr />

    <h3>🔊 Pronunciation Guide</h3>
    @if (!Model.Pronunciations.Any())
    {
        <p class="text-secondary">No pronunciation guide available.</p>
    }
    else
    {
        foreach (var pron in Model.Pronunciations)
        {
            <div class="lesson-card">
                <h4>@pron.Word</h4>
                @if (!string.IsNullOrEmpty(pron.Phonetic))
                {
                    <p>Phonetic: @pron.Phonetic</p>
                }
                @if (!string.IsNullOrEmpty(pron.AudioPath))
                {
                    <audio controls>
                        <source src="@Url.Content(pron.AudioPath)" type="audio/mpeg" />
                        Your browser does not support the audio element.
                    </audio>
                }
            </div>
        }
    }
<hr />

    <h3>📘 Lessons</h3>

    @if (!Model.Lessons.Any())
    {
        <p class="text-secondary">No lessons have been published for this course yet.</p>
    }
    else
    {
        foreach (var lesson in Model.Lessons)
        {
            <div class="lesson-card">
                <h4>@lesson.OrderNo. @lesson.Title</h4>

                <a class="btn btn-success"
                   href="@Url.Action("LessonDetails", "Learner", new { lessonId = lesson.Id })">
                    View Lesson
                </a>
            </div>
        }
    }

    <hr />

    <hr />

    <h3>📝 Quizzes</h3>

    @if (!Model.Quizzes.Any())
    {
        <p class="text-secondary">No quizzes are available for this course.</p>
    }
    else
    {
        foreach (var quiz in Model.Quizzes)
        {
            <div class="lesson-card">
                <h4>Quiz: @quiz.Question</h4>

                <a class="btn btn-primary"
                   href="@Url.Action("AttemptQuiz", "Learner", new { quizId = quiz.Id })">
                    Attempt Quiz
                </a>
            </div>
        }
    }


</div>