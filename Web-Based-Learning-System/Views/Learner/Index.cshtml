@{
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<style>
    .hero {
        background-color: #e0f2fe; 
        padding: 50px 40px;
        border-radius: 12px;
        text-align: center;
        box-shadow: 0 6px 15px rgba(0,0,0,0.05);
        margin-bottom: 40px;
    }

        .hero h1 {
            margin-bottom: 5px;
            font-size: 2.5rem;
            color: #1e3a8a;
            font-weight: 700;
        }

        .hero p {
            font-size: 1.1rem;
            color: #475569;
        }
    .dashboard-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 30px;
        margin: 0 auto;
        padding-bottom: 40px;
    }

        .dashboard-cards .card {
            display: flex; 
            justify-content: center;
            align-items: center;
            height: 150px; 
            background: white;
            text-decoration: none;
            color: #1e3a8a;
            font-size: 1.4rem;
            font-weight: 600;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            border: 2px solid #e2e8f0; 
            transition: all 0.3s ease;
        }

            .dashboard-cards .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 15px 30px rgba(59, 130, 246, 0.2); 
                border-color: #3b82f6; 
                color: #3b82f6; 
            }
</style>

<div class="container">
    <div class="hero">
        <h1>Welcome, @Context.Session.GetString("UserName")</h1>
        <p>Your learning journey starts here. Ready to master a new language?</p>
    </div>

    <div class="dashboard-cards">
        <a href="/Learner/Courses" class="card">
            <i class="fas fa-book-open"></i> My Courses
        </a>
        <a href="/Learner/Progress" class="card">
            <i class="fas fa-chart-line"></i> Track Progress
        </a>
        <a href="/Learner/Profile" class="card">
            <i class="fas fa-user-circle"></i> Update Profile
        </a>
    </div>
</div>
