@model LessonDetailsViewModel

@{
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
    ViewData["Title"] = "Lesson Detail";
}

<style>
    .lesson-content-wrapper {
        max-width: 900px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .lesson-content-card {
        background-color: white;
        padding: 35px 45px;
        border-radius: 12px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        border: 1px solid #e2e8f0;
        margin-bottom: 40px;
    }

    h2 {
        color: #1e3a8a;
        font-size: 2.2rem;
        margin-bottom: 25px;
        border-bottom: 3px solid #f1f5f9;
        padding-bottom: 10px;
    }

    h3 {
        color: #1e293b;
        margin-bottom: 20px;
    }

    .lesson-content {
        font-size: 1.1rem;
        line-height: 1.8;
        margin-bottom: 40px;
    }

    .lesson-card {
        background-color: #f8fafc;
        padding: 20px;
        margin-bottom: 15px;
        border-radius: 8px;
        border: 1px solid #e2e8f0;
    }

        .lesson-card h4 {
            margin-bottom: 10px;
            color: #334155;
        }

    .completion-form {
        text-align: right;
        border-top: 1px solid #e2e8f0;
        padding-top: 20px;
    }

    .btn-success {
        padding: 12px 25px;
        background: linear-gradient(135deg, #22c55e, #16a34a);
        color: white;
        font-weight: 700;
        border-radius: 8px;
        border: none;
        cursor: pointer;
    }
</style>

<div class="lesson-content-wrapper">

    <!-- 🔹 LESSON CONTENT -->
    <div class="lesson-content-card">
        <h2>@Model.Lesson.Title</h2>

        <div class="lesson-content">
            @Html.Raw(Model.Lesson.Content)
        </div>
    </div>

    <!-- 🔹 VOCABULARY -->
    <div class="lesson-content-card">
        <h3>📚 Vocabulary</h3>

        @if (!Model.Vocabularies.Any())
        {
            <p class="text-secondary">No vocabulary for this lesson.</p>
        }
        else
        {
            foreach (var vocab in Model.Vocabularies)
            {
                <div class="lesson-card">
                    <h4>
                        <img src="~/images/vocab/@(string.IsNullOrEmpty(vocab.Emoji) ? "default.png" : vocab.Emoji)"
                             width="24" height="24"
                             style="vertical-align: middle; margin-right: 6px;" />

                        @vocab.Word
                    </h4>

                    <p><strong>English Meaning:</strong> @vocab.EnglishMeaning</p>
                    <p><strong>Native Meaning:</strong> @vocab.NativeMeaning</p>
                    <p><strong>English Example:</strong> @vocab.EnglishExample</p>
                    <p><strong>Native Example:</strong> @vocab.NativeExample</p>
                </div>
            }
        }
    </div>

    <!-- 🔹 PRONUNCIATION -->
    <div class="lesson-content-card">
        <h3>🔊 Pronunciation Guide</h3>

        @if (!Model.Pronunciations.Any())
        {
            <p class="text-secondary">No pronunciation guide for this lesson.</p>
        }
        else
        {
            foreach (var pron in Model.Pronunciations)
            {
                <div class="lesson-card">
                    <h4>@pron.Word</h4>

                    @if (!string.IsNullOrEmpty(pron.Phonetic))
                    {
                        <p><strong>Phonetic:</strong> @pron.Phonetic</p>
                    }

                    @if (!string.IsNullOrEmpty(pron.AudioPath))
                    {
                        <audio controls>
                            <source src="@Url.Content(pron.AudioPath)" type="audio/mpeg" />
                        </audio>
                    }

                    <p class="text-secondary">
                        🎤 Listen and practice pronunciation
                    </p>
                </div>
            }
        }
    </div>

    <!-- 🔹 MARK COMPLETE -->
    <div class="lesson-content-card">
        <form method="post" asp-action="CompleteLesson" class="completion-form">
            @Html.AntiForgeryToken()
            <input type="hidden" name="lessonId" value="@Model.Lesson.Id" />

            <button type="submit" class="btn-success">
                Mark Lesson as Completed ✔
            </button>
        </form>
    </div>

</div>
