@model IEnumerable<UserProgress>
@{
    Layout = "~/Views/Shared/_LearnerLayout.cshtml";
}

<style>
    .progress-container {
        max-width: 900px;
        margin: 30px auto;
        padding: 0 20px;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
        gap: 20px;
    }
    .progress-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border-left: 5px solid; 
    }

        .progress-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
        }
        .progress-card.completed {
            background-color: #f0fdf4; 
            border-left-color: #059669; 
        }

        .progress-card.pending {
            background-color: #fefce8; 
            border-left-color: #f59e0b;
        }

        .progress-card p {
            margin: 5px 0;
            font-size: 1rem;
            color: #475569;
            display: flex;
            justify-content: space-between; 
            align-items: center;
        }

            .progress-card p strong {
                color: #1e3a8a; 
                font-weight: 600;
                font-size: 1.1rem;
            }

    .status-completed {
        color: #059669; 
        font-weight: 700;
    }

    .status-pending {
        color: #f59e0b; 
        font-weight: 700;
    }
</style>


<div class="container progress-container-wrapper">
    <h2>My Progress</h2>

    <div class="progress-container">
        @foreach (var item in Model)
        {
            var isCompleted = item.IsCompleted;
            
            <div class="progress-card @(isCompleted ? "completed" : "pending")">
                <p>
                    <strong>@item.Lesson.Title</strong>
                    
                    <span class="@(isCompleted ? "status-completed" : "status-pending")">
                        @(isCompleted ? "Completed ✅" : "Pending ⏳")
                    </span>
                </p>
                </div>
        }
    </div>
</div>