@using Web_Based_Learning_System.ViewModels
@model UserViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add User";
}

<style>

    .add-user-container {
        max-width: 600px;
        margin: 40px auto;
        padding: 30px;
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08); /* Soft Shadow */
    }

    h2 {
        color: #1e3a8a; 
        margin-bottom: 30px;
        font-weight: 700;
        font-size: 2rem;
        border-bottom: 2px solid #f1f5f9;
        padding-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* --- Form Groups and Elements --- */
    .form-group {
        margin-bottom: 20px;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #374151; /* Dark Gray Text */
            font-size: 0.95rem;
        }

    input[type="text"],
    input[type="email"],
    input[type="password"],
    select {
        width: 100%;
        padding: 12px;
        border: 1px solid #d1d5db;
        border-radius: 6px;
        box-sizing: border-box;
        font-size: 1rem;
        color: #4b5563;
        transition: border-color 0.2s, box-shadow 0.2s;
    }

        input:focus,
        select:focus {
            border-color: #3b82f6; /* Focus Blue */
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            outline: none;
        }

    /* --- Validation Feedback --- */
    .text-danger {
        color: #ef4444; /* Red for errors */
        font-size: 0.85rem;
        margin-top: 5px;
        display: block;
    }

    /* --- Success Message (Badge/Alert) --- */
    .success-message {
        background: #ecfdf5; /* Light Green */
        border: 1px solid #a7f3d0;
        color: #065f46; /* Dark Green Text */
        padding: 15px;
        border-radius: 6px;
        margin-bottom: 20px;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
        opacity: 1; /* Initial opacity for fade out */
        transition: opacity 0.5s ease-out;
    }

    /* --- Action Button (Submit) - Green Accent --- */
    .action-btn {
        display: inline-block;
        padding: 12px 25px;
        background: linear-gradient(135deg, #10b981, #059669); /* Green Gradient */
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 4px 10px rgba(16, 185, 129, 0.3);
    }

        .action-btn:hover {
            background: linear-gradient(135deg, #059669, #047857);
            transform: translateY(-1px);
            box-shadow: 0 6px 15px rgba(16, 185, 129, 0.4);
        }
</style>

<div class="add-user-container">
    <h2><i class="fas fa-user-plus"></i> Add New User</h2>

    @if (TempData["Success"] != null)
    {
        <div class="success-message" id="successMsg">
            <i class="fas fa-check-circle"></i>
            @TempData["Success"]
        </div>
    }

    <form asp-controller="Admin"
          asp-action="AddUser"
          method="post"
          enctype="multipart/form-data">

        @Html.AntiForgeryToken()

        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nickname">Nickname</label>
            <input asp-for="Nickname" placeholder="Optional display name" />
            <span asp-validation-for="Nickname" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Role">Role</label>
            <select asp-for="Role">
                <option value="">-- Select Role --</option>
                <option value="Admin">Admin</option>
                <option value="Instructor">Instructor</option>
                <option value="Learner">Learner</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ProfilePicture">Profile Picture</label>
            <input asp-for="ProfilePicture" type="file" accept="image/*" />
        </div>

        <button type="submit" class="action-btn">
            <i class="fas fa-plus-circle"></i> Create User
        </button>
    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Script to hide the success message after 5 seconds with a fade-out effect
        setTimeout(() => {
            const msg = document.getElementById('successMsg');
            if (msg) msg.style.opacity = '0'; // Start fade out
        }, 4500);

        setTimeout(() => {
            const msg = document.getElementById('successMsg');
            if (msg) msg.style.display = 'none'; // Fully remove after fade
        }, 5000);
    </script>
}