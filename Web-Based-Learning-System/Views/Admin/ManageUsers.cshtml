@model IEnumerable<Web_Based_Learning_System.Models.User>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Users";
}

<style>
    .action-btn {
        display: inline-block;
        padding: 6px 12px;
        margin-right: 5px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .action-btn:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
        }

    .container-fluid {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
    }

    h2 {
        color: #1e3a8a; 
        margin-bottom: 25px;
        font-weight: 700;
        font-size: 2rem;
        border-bottom: 3px solid #f1f5f9;
        padding-bottom: 10px;
    }

    .summary-stats {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }

    .stat-item {
        padding: 10px 15px;
        border-radius: 6px;
        font-weight: 600;
        background-color: #eef4ff; 
    }

    .stat-active {
        color: #15803d; 
        border-left: 5px solid #15803d;
    }

    .stat-inactive {
        color: #b91c1c; 
        border-left: 5px solid #b91c1c;
    }

    .action-bar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    select[name="status"] {
        padding: 8px 12px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

        select[name="status"]:focus {
            border-color: #3b82f6;
            outline: none;
        }

    a.btn-primary {
        display: inline-block;
        padding: 10px 20px;
        background: linear-gradient(135deg, #3b82f6, #2563eb); 
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        transition: all 0.2s ease;
        box-shadow: 0 3px 8px rgba(37, 99, 235, 0.3);
    }

        a.btn-primary:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
            transform: translateY(-1px);
            box-shadow: 0 5px 12px rgba(37, 99, 235, 0.4);
        }

    table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
        margin-top: 10px;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 15px rgba(0, 0, 0, 0.08); 
    }

        table thead tr {
            background-color: #f1f5f9; 
        }

        table th {
            color: #1e293b;
            font-weight: 700;
            padding: 15px 12px;
            text-align: left;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 0.7px;
        }

        table td {
            padding: 15px 12px;
            border-bottom: 1px solid #f1f5f9;
            color: #333;
            font-size: 0.95rem;
        }

        table tbody tr:last-child td {
            border-bottom: none;
        }

        table tbody tr:nth-child(even) {
            background-color: #fcfdfe; 
        }

        table tbody tr:hover {
            background-color: #eef4ff; 
            cursor: default; 
        }

    .status-badge {
        display: inline-block;
        padding: 4px 10px;
        border-radius: 20px;
        font-weight: 600;
        font-size: 0.8rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .status-active {
        background-color: #dcfce7;
        color: #15803d; 
    }

    .status-inactive {
        background-color: #fee2e2;
        color: #b91c1c; 
    }

</style>

<div class="container-fluid">
    <h2><i class="fas fa-users"></i> Manage Users</h2>

    <div class="summary-stats">
        <div class="stat-item stat-active">
            Active Users: @ViewBag.ActiveCount
        </div>
        <div class="stat-item stat-inactive">
            Inactive Users: @ViewBag.InactiveCount
        </div>
    </div>

    <div class="action-bar">
        <form method="get" class="form-inline">
            <label for="status-filter" style="margin-right: 10px; font-weight: 500;">Filter by Status:</label>
            <select id="status-filter" name="status" onchange="this.form.submit()">
                <option value="" selected="@(ViewBag.CurrentStatus == null)">
                    All Users
                </option>

                <option value="active" selected="@(ViewBag.CurrentStatus == "active")">
                    Active Users
                </option>

                <option value="inactive" selected="@(ViewBag.CurrentStatus == "inactive")">
                    Inactive Users
                </option>

            </select>
        </form>

        <a href="@Url.Action("AddUser", "Admin")" class="btn-primary">
            <i class="fas fa-user-plus"></i> Add New User
        </a>

    </div>

    <table>
        <thead>
            <tr>
                <th>Full Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Last Login</th>
                <th>Status</th>
              
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var isInactive = user.LastLoginAt == null ||
                                 user.LastLoginAt < DateTime.Now.AddYears(-1);
                
                var statusClass = isInactive ? "status-inactive" : "status-active";
                var statusText = isInactive ? "INACTIVE" : "ACTIVE";

                <tr>
                    <td>@user.FullName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                    <td>@(user.LastLoginAt?.ToString("dd MMM yyyy") ?? "Never")</td>
                    <td>
                        <span class="status-badge @statusClass">
                            @statusText
                        </span>
                    </td>
                   
                </tr>
            }
        </tbody>
    </table>
</div>