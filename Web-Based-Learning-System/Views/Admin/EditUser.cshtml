@model Web_Based_Learning_System.Models.UserViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Edit User";
}

<style>
    .edit-user-container {
        max-width: 500px;
        margin: 50px auto;
        background: white;
        padding: 35px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        font-family: 'Segoe UI', Tahoma, sans-serif;
    }

        .edit-user-container h2 {
            text-align: center;
            margin-bottom: 25px;
            color: #1e3a8a;
        }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group label {
            display: block;
            font-weight: 500;
            margin-bottom: 5px;
            color: #1e293b;
        }

        .form-group input,
        .form-group select {
            width: 100%;
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #cbd5e1;
            font-size: 0.95rem;
            color: #1e293b;
            transition: border 0.2s, box-shadow 0.2s;
        }

            .form-group input:focus,
            .form-group select:focus {
                outline: none;
                border-color: #3b82f6;
                box-shadow: 0 0 5px rgba(59, 130, 246, 0.3);
            }

    button.action-btn {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s ease;
        box-shadow: 0 3px 8px rgba(37, 99, 235, 0.3);
    }

        button.action-btn:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
            transform: translateY(-1px);
            box-shadow: 0 5px 12px rgba(37, 99, 235, 0.4);
        }

    .success-message {
        background: #dcfce7;
        color: #166534;
        padding: 12px;
        border-radius: 8px;
        margin-bottom: 15px;
        text-align: center;
        font-weight: 500;
        animation: fadeOut 5s forwards;
    }
</style>

<div class="edit-user-container">
    <h2>Edit User</h2>

    @if (TempData["Success"] != null)
    {
        <div class="success-message" id="successMsg">
            @TempData["Success"]
        </div>
    }

    <form asp-action="EditUser" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label>Full Name</label>
            <input asp-for="FullName" placeholder="Enter full name" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Email</label>
            <input asp-for="Email" placeholder="Enter email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Role</label>
            <select asp-for="Role">
                <option value="">-- Select Role --</option>
                <option value="Admin" selected="@(Model.Role == "Admin" ? "selected" : null)">Admin</option>
                <option value="Instructor" selected="@(Model.Role == "Instructor" ? "selected" : null)">Instructor</option>
                <option value="Learner" selected="@(Model.Role == "Learner" ? "selected" : null)">Learner</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <br />
        <button type="submit" class="action-btn">Update User</button>
    </form>
</div>

<script>
    // Hide success message after 5 seconds
    setTimeout(() => {
        const msg = document.getElementById('successMsg');
        if (msg) msg.style.display = 'none';
    }, 5000);
</script>
