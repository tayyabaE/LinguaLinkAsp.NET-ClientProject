@model IEnumerable<Web_Based_Learning_System.Models.Course>
@{
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
    ViewData["Title"] = "Instructor Dashboard";
}

<style>
    .sidebar h2 {
        text-align: center;
        margin-bottom: 30px;
        color: #ffffff; 
    }

    .instructor-dashboard-wrapper {
        max-width: 1000px;
        margin: 20px auto;
        padding: 0 20px;
    }

    h2, h3 {
        color: #1e3a8a;
        margin-bottom: 15px; 
    }

    a.btn-primary {
        display: inline-block;
        padding: 10px 20px;
        margin-bottom: 20px; 
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        border: none;
        transition: all 0.2s ease;
        box-shadow: 0 3px 8px rgba(37, 99, 235, 0.3);
    }

        a.btn-primary:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
            transform: translateY(-1px);
            box-shadow: 0 5px 12px rgba(37, 99, 235, 0.4);
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
        background-color: white;
        border-radius: 10px;
        overflow: hidden;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.06);
    }

        table th {
            background-color: #f1f5f9;
            color: #1e293b;
            font-weight: 700;
            padding: 12px;
            text-align: left;
            border-bottom: 2px solid #e2e8f0;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.5px;
        }

        table td {
            padding: 12px;
            border-bottom: 1px solid #f1f5f9;
            color: #333;
            font-size: 0.95rem;
        }

        table tbody tr:nth-child(even) {
            background-color: #f8fafc;
        }

        table tbody tr:hover {
            background-color: #eef4ff;
            cursor: pointer;
        }

    .action-btn {
        display: inline-block;
        padding: 5px 12px;
        margin: 0 3px;
        background: linear-gradient(135deg, #3b82f6, #2563eb);
        color: white;
        font-size: 0.85rem;
        font-weight: 500;
        border-radius: 4px;
        text-decoration: none;
        transition: all 0.2s ease;
    }

        .action-btn:hover {
            background: linear-gradient(135deg, #2563eb, #1e40af);
            transform: translateY(-1px);
            box-shadow: 0 3px 6px rgba(37, 99, 235, 0.4);
        }
</style>

<div class="instructor-dashboard-wrapper">
   
    <a href="/Instructor/AddCourse" class="btn-primary">Add New Course</a>

    <h3> All Courses</h3>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Level</th>
                <th>Lessons</th>
                <th style="width: 220px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td data-label="Name">@course.Name</td>
                    <td data-label="Level">@course.Level</td>
                    <td data-label="Lessons">@(course.Lessons?.Count ?? 0)</td>
                    <td data-label="Actions">
                        <a href="/Instructor/AddLesson?courseId=@course.Id" class="action-btn">Add Lesson</a>
                        <a href="/Instructor/EditLesson/@course.Id" class="action-btn">Edit Lesson</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
