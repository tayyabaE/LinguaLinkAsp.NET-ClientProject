@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Home";
}

<style>
    
    .hero {
        text-align: center;
        padding: 50px 20px;
        margin-bottom: 50px;
        background: linear-gradient(145deg, #e0f2fe, #ffffff);
        border-radius: 10px;
        box-shadow: 0 6px 18px rgba(30, 58, 138, 0.1); 
    }

        .hero h1 {
            font-size: 3rem; 
            color: #1e3a8a;
            margin-bottom: 12px;
            font-weight: 800;
        }

        .hero p {
            font-size: 1.3rem;
            color: #475569;
            margin-bottom: 25px; 
        }

        .hero .btn-primary {
            display: inline-block;
            padding: 12px 30px;
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 8px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 10px rgba(59, 130, 246, 0.4);
        }

            .hero .btn-primary:hover {
                background: linear-gradient(135deg, #2563eb, #1e40af);
                transform: translateY(-2px);
            }

    .features-grid {
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 20px;
        margin-bottom: 50px;
    }

    .feature-card {
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.05);
        border-top: 4px solid #3b82f6;
        transition: transform 0.3s, box-shadow 0.3s;
    }

        .feature-card:hover {
            transform: translateY(-3px); 
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        .feature-card .icon {
            font-size: 2rem;
            color: #3b82f6;
            margin-bottom: 8px;
        }

        .feature-card h3 {
            font-size: 1.2rem;
            margin-bottom: 8px;
        }

        .feature-card p {
            font-size: 0.9rem;
            line-height: 1.5;
        }

    .cta-banner {
        padding: 30px 20px;
        border-radius: 10px;
        margin-bottom: 30px;
    }

        .cta-banner h2 {
            font-size: 1.8rem;
            margin-bottom: 10px;
        }

        .cta-banner p {
            font-size: 1rem; 
            margin-bottom: 20px;
        }

        
        .cta-banner .btn-secondary {
            display: inline-block;
            padding: 12px 30px;
             background: linear-gradient(135deg, #3b82f6, #2563eb);
            color: white;
            font-size: 1.1rem;
            font-weight: 700;
            text-decoration: none;
            border-radius: 8px;
            transition: background 0.3s;
        }
            .cta-banner  .btn-secondary:hover{
                background: linear-gradient(135deg, #2563eb, #1e40af);
                transform: translateY(-2px);
            }
            
</style>

<div class="container">
    
    <div class="hero">
        <h1>Welcome to LinguaLink</h1>
        <p>Learn languages online with interactive resources and connect with a global community.</p>
        <a href="@Url.Action("Register", "Account")" class="btn-primary">Start Learning for Free Today</a>
    </div>

    <div class="features-grid">
        <div class="feature-card">
            <div class="icon">📖</div>
            <h3>Structured Courses</h3>
            <p>From Beginner to Advanced, follow a clear path designed by language experts.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🗣️</div>
            <h3>Real-Life Conversation</h3>
            <p>Focus on practical skills with exercises based on everyday situations.</p>
        </div>
        <div class="feature-card">
            <div class="icon">🌐</div>
            <h3>Global Access</h3>
            <p>Flexible lessons allow you to study whenever and wherever you choose.</p>
        </div>
    </div>
    
    <div class="cta-banner">
        <h2>Ready to break the language barrier?</h2>
        <p>Join thousands of happy learners who are mastering new languages with LinguaLink.</p>
        <a href="@Url.Action("Courses", "Home")" class="btn-secondary">Explore All Courses</a>
    </div>

</div>