@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Terms of Service";
}

<style>
    /* --- General Terms Page Styles (White & Blue Theme) --- */
    .terms-page-content {
        padding: 30px 0; /* Slightly reduced padding */
        background-color: #f4f7fa; /* Very light, subtle background */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Clean, modern font */
        line-height: 1.5; /* Slightly tighter line height */
    }

    .terms-header-section {
        text-align: center;
        margin-bottom: 30px; /* Reduced margin */
        padding: 15px;
        background-color: #e6f3ff; /* Very light blue header background */
        border-radius: 6px;
        border-bottom: 3px solid #007bff; /* Blue accent line */
    }

        .terms-header-section h1 {
            color: #007bff; /* Primary Blue for headings */
            font-weight: 700;
            margin-bottom: 3px;
            font-size: 1.8em; /* Reduced heading size */
        }

            .terms-header-section h1 i {
                margin-right: 8px;
            }

    .effective-date {
        font-style: italic;
        color: #6c757d;
        margin-bottom: 15px; /* Reduced margin */
        font-size: 0.9em;
    }

    .intro-statement {
        font-size: 1.0em; /* Slightly smaller font */
        color: #343a40;
    }

    /* --- Policy Sections --- */
    .terms-sections {
        max-width: 800px; /* Reduced max width for compactness */
        margin: 0 auto;
        padding: 25px; /* Reduced padding */
        background-color: #ffffff;
        border: 1px solid #ced4da;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

        .terms-sections section {
            margin-bottom: 25px; /* Reduced margin */
            padding-bottom: 10px;
            border-bottom: 1px solid #e9ecef;
        }

            .terms-sections section:last-child {
                border-bottom: none;
            }

    .article-heading {
        color: #007bff; /* Primary Blue */
        border-left: 4px solid #007bff; /* Blue accent line */
        padding-left: 12px;
        margin-top: 0;
        margin-bottom: 12px;
        font-size: 1.4em; /* Reduced heading size */
    }

    .terms-sections p {
        margin-bottom: 10px;
        color: #495057;
        font-size: 0.95em; /* Smaller paragraph font */
    }

    /* List Styling */
    .terms-sections ul, .terms-sections ol {
        padding-left: 20px;
        margin-top: 5px;
        margin-bottom: 10px;
        font-size: 0.95em; /* Smaller list font */
    }

        .terms-sections ul li, .terms-sections ol li {
            margin-bottom: 6px;
            color: #495057;
        }

    /* Disclaimer Text */
    .disclaimer-text {
        background-color: #fff3cd; /* Light warning yellow */
        border-left: 5px solid #ffc107; /* Yellow warning border */
        padding: 12px;
        font-weight: 500;
        color: #856404;
        border-radius: 4px;
        font-size: 0.9em;
    }

    /* Contact Note Blockquote */
    .contact-note {
        background-color: #f8f9fa; /* Light gray background */
        border-left: 5px solid #007bff;
        padding: 12px;
        margin: 15px 0;
        font-style: italic;
        color: #007bff; /* Blue contact text */
        border-radius: 4px;
        font-size: 0.9em;
    }

        .contact-note i {
            margin-right: 6px;
            color: #007bff;
        }
</style>
