@model IEnumerable<Web_Based_Learning_System.Models.Course>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Courses";
}
<style>
        .courses-section {
        margin: 50px auto;
        max-width: 1200px;
        padding: 0 20px;
    }

        .courses-section h2 {
            text-align: center;
            font-size: 2rem;
            color: #1e293b;
            margin-bottom: 10px;
        }

        .courses-section p {
            text-align: center;
            color: #64748b;
        }

    .courses-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-top: 40px;
    }

    .course-card {
        position: relative;
        background-color: white;
        padding: 30px; 
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08); 
        border-left: 6px solid; 
        transition: transform 0.3s ease, box-shadow 0.3s ease, border-color 0.3s ease;
    }

        .course-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        }

        .course-card h3 {
            margin: 0 0 12px;
            font-size: 1.3rem;
            color: #1e3a8a;
        }

        .course-card p {
            font-size: 0.95rem;
            color: #475569;
            line-height: 1.5;
        }

    .course-level {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
        color: white;
        box-shadow: 0 2px 5px rgba(0,0,0,0.2);
    }

    .level-beginner {
        background-color: #22c55e; 
        border-color: #22c55e;
    }

    .level-intermediate {
        background-color: #f59e0b; 
        border-color: #f59e0b;
    }

    .level-advanced {
        background-color: #ef4444; 
        border-color: #ef4444;
    }

    .course-card .btn {
        display: inline-block;
        margin-top: 20px;
        padding: 10px 20px;
        background-color: #3b82f6;
        color: white;
        border-radius: 6px; 
        text-decoration: none;
        font-weight: 700;
        font-size: 1rem;
        transition: all 0.2s ease;
    }

        .course-card .btn:hover {
            background-color: #2563eb;
            transform: translateY(-2px); 
            box-shadow: 0 8px 15px rgba(37, 99, 235, 0.4); 
        }
</style>
<section class="courses-section">
    <h2>Available Courses</h2>

    <div class="courses-container">

        @if (Model != null && Model.Any())
        {
            foreach (var course in Model)
            {
                <div class="course-card">

                    <span class="course-level
                                @(course.Level == "Beginner" ? "level-beginner" :
                                                                  course.Level == "Intermediate" ? "level-intermediate" :
                                                                  "level-advanced")">
                @course.Level
            </span>

                    <h3>@course.Name</h3>
                    <p>@course.Description</p>

                    <a class="btn"
                       href="@Url.Action("Login", "Account")">
                        Login to Enroll
                    </a>

                </div>

                }

        }
        else
        {
            <p>No courses available at the moment.</p>
        }
    </div>
</section>